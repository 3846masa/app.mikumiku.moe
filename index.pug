mixin card(opts)
  .ui.fluid.card
    .image
      img.b-lazy(
        src="data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAABAABAAACADs=",
        data-src=opts.img, alt=opts.title
      )
    .content
      .header= opts.title
      .description= opts.description
    a.ui.bottom.attached.button(
      href=opts.href, target="_blank"
    )
      span Go!
      i.arrow.right.icon

doctype html5
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="initial-scale=1.0")
    title 3846masa Apps
    link(href="//cdn.jsdelivr.net/semantic-ui/2.1.8/semantic.min.css", rel="stylesheet")
    style.
      .main.container {
        padding-top: 2em;
      }
    script(src="//cdn.jsdelivr.net/blazy/1.5.4/blazy.min.js")
    script.
      ;new Blazy();
  body
    div.ui.main.container
      h1.ui.header 3846masa Apps
      .ui.doubling.stackable.three.column.grid.cards
        each product in products
          +card(product)
